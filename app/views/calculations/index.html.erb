<h3>Add your calculation:</h3>

<div class="row">
  <div class="col-md-8">
  <%= form_for Calculation.new, :html=> { class: 'form-inline' }, remote: true do |f| %>
    
      <div class="form-group">
         <%= f.label :a, :class =>'sr-only'%><br>
      <%= f.text_field :a, :class =>'form-control'%>
      </div>
      <div class="form-group">
           <%= f.label :b, :class =>'sr-only'%><br>
      <%= f.text_field :b, :class =>'form-control'%>
      </div>
      <div class="form-group">

         <!--  <button class="btn calculate_btns" disabled="disabled" id="sum">Sum</button>
          <button class="btn calculate_btns" disabled="disabled" id="difference">Difference</button>
          <button class="btn calculate_btns" disabled="disabled" id="multiplication">Multiplication</button>
          <button class="btn calculate_btns" disabled="disabled" id="division">Division</button> -->
          
          <%= button_tag "Add", :class =>'btn btn-default calculate_btns', :disabled => 'disabled', :type => 'submit' %>
      </div>
  <% end %>

  <textarea rows="10" cols="50" disabled="disabled" id="calculations">
    <%= render @last_calculation %>
  </textarea>
  </div>

</div>

<script type="text/javascript">
$('#calculation_a, #calculation_b').on("keyup", action);

function action() {
    if(($('#calculation_a').val() > 0 && $('#calculation_a').val() < 100) && ($('#calculation_b').val() > 0 && $('#calculation_b').val() < 100)) {

        $('.calculate_btns').prop("disabled", false);

    } else {

        $('.calculate_btns').prop("disabled", true);
    }   
} 


</script>