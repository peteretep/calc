<h3>Add your calculation:</h3>

<div class="row">
  <div class="col-md-8">
  <%= form_for Calculation.new, :html=> { class: 'form-inline' }, remote: true do |f| %>
    
      <div class="form-group">
         <%= f.label :a, :class =>'sr-only'%><br>
      <%= f.text_field :a, :class =>'form-control'%>
      </div>
      <div class="form-group">
           <%= f.label :b, :class =>'sr-only'%><br>
      <%= f.text_field :b, :class =>'form-control'%>
      </div>
      <div class="btn-group">
          <%= f.submit "Add", :class =>'btn btn-default calculate_btns', :disabled => 'disabled' %>
          <%= f.submit "Subtract", :class =>'btn btn-default calculate_btns', :disabled => 'disabled'%>
          <%= f.submit "Multiply", :class =>'btn btn-default calculate_btns', :disabled => 'disabled' %>
          <%= f.submit "Divide", :class =>'btn btn-default calculate_btns', :disabled => 'disabled' %>
      </div>
  <% end %>

  <textarea rows="10" cols="50" disabled="disabled" id="calculations">
    <%= render partial: "calculation", object:@last_calculation %>
  </textarea>
  </div>

</div>

<script type="text/javascript">
$('#calculation_a, #calculation_b').on("keyup", action);

function action() {
    if(($('#calculation_a').val() > 0 && $('#calculation_a').val() < 100) && ($('#calculation_b').val() > 0 && $('#calculation_b').val() < 100)) {

        $('.calculate_btns').prop("disabled", false);

    } else {

        $('.calculate_btns').prop("disabled", true);
    }   
} 


</script>